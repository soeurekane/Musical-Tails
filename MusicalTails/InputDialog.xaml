<Window x:Class="MusicalTails.InputDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Ввод имени" Height="200" Width="300"
        WindowStartupLocation="CenterScreen">
    <StackPanel Margin="10">
        <TextBlock x:Name="QuestionText" Margin="0,0,0,10"/>
        <TextBox x:Name="AnswerTextBox" Margin="0,0,0,10"/>
        <Button Content="OK" Click="OkButton_Click" HorizontalAlignment="Center" Padding="20,5" BorderBrush="#FFDEA1E2" Background="#FFFEC3CA"/>
    </StackPanel>
</Window>